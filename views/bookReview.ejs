<%- include ('partials/header.ejs') -%>
<div class="imageReview">
    
<h1> Add review to your book</h1>
<p> <strong>Book:</strong> <%= title %> - <strong>Author:</strong> <%= author %></p>
<img class="reviewImage" src="https://covers.openlibrary.org/b/olid/<%=cover %>-M.jpg" />
</div>

<form action="/addReview" method="POST">
    <input type="hidden" name="title" value="<%= title %>">
    <input type="hidden" name="author" value="<%= author %>">
    <input type="hidden" name="cover" value="<%= cover %>">
    <input type="hidden" name="userId" value="<%= userId %>">
    <label for="review">Write your review:</label><br>
    <textarea id="review" name="review" rows="4" cols="50"></textarea><br>
    
    <button type="submit">Submit Review</button>

</form>


